{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "padding": { "top": 20 },
  "autosize": { "type": "fit", "contains": "padding" },
  "signals": [
    {
      "name": "width",
      "init": "containerSize()[0]",
      "on": [{ "events": "window:resize", "update": "containerSize()[0]" }]
    },
    {
      "name": "height",
      "init": "containerSize()[1]",
      "on": [{ "events": "window:resize", "update": "containerSize()[1]" }]
    },
    {
      "name": "active",
      "value": null,
      "on": [
        { "events": "shape:mouseover", "update": "datum[\"properties\"][\"cartogram_id\"]" },
        { "events": "mouseover[!event.item]", "update": "null" }
      ]
    }
  ],
  "data": [
    {
      "name": "source_csv",
      "url": "./static/usa-data.csv",
      "format": { "type": "csv", "delimiter": "," }
    },
    {
      "name": "source_geojson",
      "url": "./static/usa-population.json",
      "format": { "property": "features", "type": "json", "parse": {} }
    },
    {
      "name": "geo_1",
      "source": "source_geojson",
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"name\"]",
          "as": "Region"
        },
        {
          "type": "lookup",
          "from": "source_csv",
          "key": "Region",
          "fields": ["Region"],
          "values": ["Abbreviation", "Color", "ColorGroup"]
        },
        {
          "type": "formula",
          "expr": "geoArea('source_projection', datum.geometry)",
          "as": "Area"
        },
        {
          "type": "formula",
          "expr": "datum[\"properties\"][\"label\"][\"x\"]",
          "as": "x"
        },
        {
          "type": "formula",
          "expr": "datum[\"properties\"][\"label\"][\"y\"]",
          "as": "y"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "source_projection",
      "size": { "signal": "[width, height]" },
      "fit": { "signal": "data('source_geojson')" },
      "type": "identity",
      "reflectY": true
    }
  ],
  "scales": [
    {
      "name": "font_size",
      "type": "band",
      "domain": { "data": "geo_1", "field": "Area", "sort": true },
      "range": [8, 12]
    },
    {
      "name": "color_group",
      "type": "ordinal",
      "domain": { "data": "source_csv", "field": "ColorGroup" },
      "range": { "scheme": "pastel1" }
    }
  ],
  "marks": [
    {
      "name": "label_marks",
      "type": "text",
      "style": ["text"],
      "from": { "data": "geo_1" },
      "encode": {
        "enter": {
          "text": { "field": "Abbreviation" }
        },
        "update": {
          "x": { "field": "x" },
          "y": { "field": "y" },
          "description": {
            "signal": "\"geolabel_\" + datum[\"properties\"][\"cartogram_id\"]"
          },
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fontSize": [
            {
              "test": "datum.Area < 1000",
              "scale": "font_size",
              "field": "Area"
            },
            { "value": 12 }
          ],
          "opacity": { "signal": "datum.Area < 400 ? 0:1" },
          "ariaRoleDescription": { "value": "geolabel" }
        }
      },
      "transform": [{ "type": "geopoint", "fields": ["x", "y"], "projection": "source_projection" }]
    },
    {
      "name": "polygon_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": { "data": "geo_1" },
      "encode": {
        "update": {
          "description": {
            "signal": "\"geoshape_\" + datum[\"properties\"][\"cartogram_id\"]"
          },
          "stroke": { "value": "black" },
          "strokeWidth": {
            "signal": "datum[\"properties\"][\"cartogram_id\"] == active? 1 : 0.2"
          },
          "tooltip": { "signal": "datum" },
          "fill": [
            {
              "test": "isValid(datum.Color)",
              "field": "Color"
            },
            { "scale": "color_group", "field": "ColorGroup" }
          ],
          "ariaRoleDescription": { "value": "geoshape" }
        }
      },
      "transform": [{ "type": "geoshape", "projection": "source_projection" }]
    }
  ]
}
